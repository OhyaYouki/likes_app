<% if @like.present? %>
  <%= link_to post_like_path(@post.id,@like.id),method: :delete ,remote: true,class: "heart-length" do %> 
    <i class="fa fa-heart" id="like-btn"></i>
    <%= @post.likes.length %>
  <% end %>
<% else %>
  <%= link_to post_likes_path(@post.id),method: :post ,remote: true,class: "heart-length" do %>
    <i class="fa fa-heart" id="unlike-btn"></i>
    <%= @post.likes.length %> 
  <% end %>
<% end %>

